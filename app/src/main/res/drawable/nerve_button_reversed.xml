<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:top="0dp" android:bottom="0dp" android:right="0dp" android:left="0dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" >
                    <solid android:color="@android:color/transparent" />
                    <stroke android:color="#6accf2" android:width="2dp" />
                    <corners android:bottomRightRadius="22dp"
                        android:topLeftRadius="22dp" />
                </shape>
            </item>
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" >
                    <solid android:color="#4FA3C2" />
                    <stroke android:color="#5dbcde" android:width="1dp" />
                    <corners android:bottomRightRadius="22dp"
                        android:topLeftRadius="22dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape xmlns:android="http://schemas.android.com/apk/res/android" >
                    <solid android:color="#057492" />
                    <stroke android:color="#5e97ae" android:width="2dp" />
                    <corners android:bottomRightRadius="22dp"
                        android:topLeftRadius="22dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>