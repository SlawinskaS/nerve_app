<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hacks4snaks.nerve.ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/child_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/text_view_back"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="18dp"
            android:textColor="#333333"
            android:textSize="24sp"
            android:text="@string/child_name"
            tools:text="@string/child_name" />

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/profile_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image"
            android:layout_marginTop="-10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/text_view_back"
            android:stretchColumns="0,1">

            <TableRow>
                <LinearLayout
                    android:id="@+id/profile_sex"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/content_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_sex"
                        tools:text="@string/profile_sex"
                        android:textColor="#000000" />
                    <TextView
                        android:id="@+id/header_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="-4dp"
                        android:textSize="12sp"
                        tools:textSize="12sp"
                        android:text="Sex: "
                        tools:text="Sex:"
                        android:textColor="#BCBCBC" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_born"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/content_born"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_born"
                        tools:text="@string/profile_born"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/header_born"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="-4dp"
                        android:textSize="12sp"
                        tools:textSize="12sp"
                        android:text="Born: "
                        tools:text="Born:"
                        android:textColor="#BCBCBC" />
                </LinearLayout>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0"/>

            <TableRow>

                <LinearLayout
                    android:id="@+id/profile_weight"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/content_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_weight"
                        tools:text="@string/profile_weight"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/header_weight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:layout_weight="1"
                        android:text="Weight: "
                        android:textSize="12sp"
                        tools:textSize="12sp"
                        tools:text="Weight:"
                        android:textColor="#BCBCBC" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_height"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/content_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_height"
                        tools:text="@string/profile_height"
                        android:textColor="#000000" />
                    <TextView
                        android:id="@+id/header_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="-4dp"
                        android:textSize="12sp"
                        tools:textSize="12sp"
                        android:text="Height: "
                        tools:text="Height:"
                        android:textColor="#BCBCBC" />
                </LinearLayout>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/profile_epilepsy_type"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/content_epilepsy_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_epilepsy_type"
                        tools:text="@string/profile_epilepsy_type"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/header_epilepsy_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:layout_weight="1"
                        android:text="Type of Epilepsy"
                        android:textSize="12sp"
                        tools:text="Type of Epilepsy:"
                        android:textColor="#BCBCBC"
                        tools:textSize="12sp" />
                </LinearLayout>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0"/>

            <TableRow>
                <LinearLayout
                    android:id="@+id/profile_first_seizure"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/content_first_seizure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_first_seizure"
                        tools:text="@string/profile_first_seizure"
                        android:textColor="#000000" />
                    <TextView
                        android:id="@+id/header_first_seizure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="-4dp"
                        android:textSize="12sp"
                        tools:textSize="12sp"
                        android:text="First Seizure: "
                        tools:text="First Seizure:"
                        android:textColor="#BCBCBC" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_last_seizure"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/content_last_seizure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_last_seizure"
                        tools:text="@string/profile_last_seizure"
                        android:textColor="#000000" />
                    <TextView
                        android:id="@+id/header_last_seizure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="-4dp"
                        android:textSize="12sp"
                        tools:textSize="12sp"
                        android:text="Last Seizure: "
                        tools:text="Last Seizure:"
                        android:textColor="#BCBCBC" />
                </LinearLayout>
            </TableRow>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D0D0D0"/>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/profile_taken_medicine"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/content_taken_medicine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_taken_medicine"
                        tools:text="@string/profile_taken_medicine"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/header_taken_medicine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:layout_weight="1"
                        android:text="Taken Medicine: "
                        android:textSize="12sp"
                        tools:text="Taken Medicine:"
                        android:textColor="#BCBCBC"
                        tools:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_last_medicine"
                    android:padding="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/content_last_medicine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_last_medicine"
                        tools:text="@string/profile_last_medicine"
                        android:textColor="#000000" />

                    <TextView
                        android:id="@+id/header_last_medicine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:layout_weight="1"
                        android:text="Last Medicine: "
                        android:textSize="12sp"
                        tools:text="Last Medicine"
                        android:textColor="#BCBCBC"
                        tools:textSize="12sp" />
                </LinearLayout>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/profile_image"
            android:layout_below="@+id/child_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-16dp"
            android:elevation="6dp"
            android:layout_width="92dp"
            android:layout_height="92dp"
            android:background="@drawable/seizure_circle"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:elevation="6dp"
                android:src="@drawable/image_profile"
                android:visibility="visible"
                app:civ_border_color="#F1F1F1"
                app:civ_border_width="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/profile_edit_p"
            android:layout_alignEnd="@+id/profile_description"
            android:layout_above="@+id/profile_description"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-16dp"
            android:elevation="2dp"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:background="@drawable/seizure_circle"
            android:gravity="center">
        <ImageButton
            android:id="@+id/profile_edit"
            android:layout_alignTop="@+id/profile_edit_p"
            android:layout_margin="4dp"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:elevation="2dp"
            android:background="@drawable/circle_button"
            android:gravity="center"
            android:onClick="onClickToDetected"
            android:padding="8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/icon_edit_black"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
