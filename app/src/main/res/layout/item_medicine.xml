<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/item_medicine"
    android:background="@android:color/transparent"
    android:elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:padding="4dp"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout android:id="@+id/medicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <View
            android:layout_width="16dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="8dp"
            android:layout_toEndOf="@+id/hour_text"
            android:layout_centerInParent="true"
            android:background="@android:color/darker_gray"/>

        <TextView android:id="@+id/medicine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nutrivil"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="8dp"
            android:layout_toEndOf="@+id/hour_text"
            android:layout_centerInParent="true"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/day_events"
        android:layout_below="@id/medicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!--<LinearLayout-->
            <!--android:paddingHorizontal="12dp"-->
            <!--android:paddingBottom="8dp"-->
            <!--android:orientation="vertical"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_width="wrap_content">-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:text="Monotherapy"-->
                <!--tools:text="Monotherapy"-->
                <!--android:textColor="#000000" />-->

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="-4dp"-->
                <!--android:layout_weight="1"-->
                <!--android:text="Type Of Therapy"-->
                <!--android:textSize="12sp"-->
                <!--tools:text="Type Of Therapy"-->
                <!--android:textColor="#BCBCBC"-->
                <!--tools:textSize="12sp" />-->
        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="2dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/DoseMedicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="200mg"
                android:textColor="#000000"
                tools:text="200mg" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_weight="1"
                android:text="Dosage"
                android:textSize="12sp"
                tools:text="Dosage"
                android:textColor="#BCBCBC"
                tools:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="2dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/FrequencyMedicine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Twice a day"
                android:textColor="#000000"
                tools:text="Twice a day" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_weight="1"
                android:text="Frequency"
                android:textSize="12sp"
                tools:text="Frequency"
                android:textColor="#BCBCBC"
                tools:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="2dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="1/2"
                tools:text="1/2"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_weight="1"
                android:text="Taken"
                android:textSize="12sp"
                tools:text="Taken"
                android:textColor="#BCBCBC"
                tools:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="16dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rect_button"
        android:gravity="center"
        android:id="@+id/ralativeLayout">

        <ImageButton
            android:id="@+id/take_medicine"
            android:layout_width="48dp"
            android:layout_height="50dp"
            android:paddingHorizontal="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="16dp"
            android:layout_centerInParent="true"
            android:scaleType="fitCenter"
            android:background="@drawable/rect_button"
            android:src="@drawable/icon_medicine_blue" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Take"
            tools:text="Take"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp"
            tools:textSize="12sp" />
    </RelativeLayout>
    <View
        android:layout_below="@id/day_events"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>