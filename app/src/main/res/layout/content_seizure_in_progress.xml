<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.hacks4snaks.nerve.SeizureInProgress"
    tools:showIn="@layout/activity_seizure_in_progress">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/profile_image"
            android:layout_width="83dp"
            android:layout_height="83dp"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/seizure_circle"
            android:layout_above="@id/profile"
            android:elevation="6dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:elevation="6dp"
                android:src="@drawable/image_profile"
                android:visibility="visible"
                app:civ_border_color="#F1F1F1"
                app:civ_border_width="8dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/seizure_circle"
            android:layout_width="232dp"
            android:layout_height="232dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/seizure_circle"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/seizure_detected"
                android:layout_width="183dp"
                android:layout_height="183dp"
                android:background="@drawable/seizure_circle"
                android:onClick="OnClickCancelDetecting"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/seizure_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/seizure_decected"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    tools:text="@string/seizure_in_progress" />

                <TextView
                    android:id="@+id/doubletap_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="@string/doubletap"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    tools:text="@string/doubletap" />
            </LinearLayout>

            <View
                android:id="@+id/seizure_in_progress"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_centerInParent="true"
                android:onClick="ProgressonClickToCancel"
                android:elevation="4dp"
                android:background="@drawable/seizure_in_progress" />
        </RelativeLayout>

        <ViewFlipper
            android:id="@+id/profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/needs_help"
            android:onClick="onClickProfileFlipper"
            android:background="@drawable/text_view_back">

            <LinearLayout
                android:id="@+id/column1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true">

                <LinearLayout
                    android:id="@+id/profile_epilepsy_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/content_epilepsy_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_epilepsy_type"
                        android:textColor="#000000"
                        tools:text="@string/profile_epilepsy_type" />

                    <TextView
                        android:id="@+id/header_epilepsy_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:layout_weight="1"
                        android:text="Type of Epilepsy"
                        android:textColor="#BCBCBC"
                        android:textSize="12sp"
                        tools:text="Type of Epilepsy:"
                        tools:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_last_seizure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/content_last_seizure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_last_seizure"
                        android:textColor="#000000"
                        tools:text="@string/profile_last_seizure" />

                    <TextView
                        android:id="@+id/header_last_seizure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:layout_weight="1"
                        android:text="Last Seizure: "
                        android:textColor="#BCBCBC"
                        android:textSize="12sp"
                        tools:text="Last Seizure:"
                        tools:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/column2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true">

                <LinearLayout
                    android:id="@+id/profile_taken_medicine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/content_taken_medicine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_taken_medicine"
                        android:textColor="#000000"
                        tools:text="@string/profile_taken_medicine" />

                    <TextView
                        android:id="@+id/header_taken_medicine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:layout_weight="1"
                        android:text="Monotherapy"
                        android:textColor="#BCBCBC"
                        android:textSize="12sp"
                        tools:text="Monotherapy"
                        tools:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/profile_last_medicine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/content_last_medicine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/profile_last_medicine"
                        android:textColor="#000000"
                        tools:text="@string/profile_last_medicine" />

                    <TextView
                        android:id="@+id/header_last_medicine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-4dp"
                        android:layout_weight="1"
                        android:text="Last Medicine Taken"
                        android:textColor="#BCBCBC"
                        android:textSize="12sp"
                        tools:text="Last Medicine Taken"
                        tools:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </ViewFlipper>

        <TextView
            android:id="@+id/needs_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seizure_circle"
            android:layout_centerHorizontal="true"
            android:background="@drawable/seizure_detected_timer"
            android:layout_marginTop="4dp"
            android:padding="8dp"
            android:elevation="6dp"
            android:text="@string/needs_help"
            android:textColor="#000000"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/call1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                android:elevation="12dp"
                android:orientation="horizontal"
                android:gravity="center">
                <Button android:id="@+id/call_button1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/call_button"

                    android:elevation="6dp"/>
                <ImageView android:id="@+id/phone1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_phone_green1"/>
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/call2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:elevation="12dp"
                android:orientation="horizontal"
                android:gravity="center">
                <Button android:id="@+id/call_button2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/call_button"
                    android:elevation="6dp"/>
                <ImageView android:id="@+id/phone2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icon_phone_green1"/>
            </RelativeLayout>
        </LinearLayout>

        <!--<RelativeLayout-->
        <!--android:id="@+id/seizure_circle2"-->
        <!--android:layout_width="100dp"-->
        <!--android:layout_height="100dp"-->
        <!--android:layout_marginStart="8dp"-->
        <!--android:layout_marginTop="2dp"-->
        <!--android:visibility="invisible"-->
        <!--android:background="@drawable/camera_button"-->
        <!--android:gravity="center"-->
        <!--android:onClick="OnClickCancelDetecting">-->
        <!--</RelativeLayout>-->
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
