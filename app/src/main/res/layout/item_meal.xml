<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/item_meal"
    android:background="@android:color/transparent"
    android:elevation="4dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:padding="4dp"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout android:id="@+id/medicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <View
            android:layout_width="16dp"
            android:layout_height="1dp"
            android:layout_marginHorizontal="8dp"
            android:layout_toEndOf="@+id/hour_text"
            android:layout_centerInParent="true"
            android:background="@android:color/darker_gray"/>

        <TextView android:id="@+id/medicine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breakfast"
            android:textSize="18dp"
            android:textColor="@color/colorPrimaryDark">
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="8dp"
            android:layout_toEndOf="@+id/hour_text"
            android:layout_centerInParent="true"
            android:background="@android:color/darker_gray"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/day_events"
        android:layout_below="@id/medicine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="2dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="10:00"
                tools:text="10:00"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_weight="1"
                android:text="Time of meal"
                android:textSize="12sp"
                tools:text="Time of meal"
                android:textColor="#BCBCBC"
                tools:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="2dp"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="200"
                tools:text="200"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-4dp"
                android:layout_weight="1"
                android:text="Calories"
                android:textSize="12sp"
                tools:text="Calories"
                android:textColor="#BCBCBC"
                tools:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_height="36dp"
        android:layout_width="36dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="24dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/event_green"
        android:gravity="center"
        android:id="@+id/ralativeLayout">

        <Button
            android:id="@+id/take_medicine"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/round_button"
            android:text="···"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>
    <View
        android:layout_below="@id/day_events"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="8dp"
        android:background="@android:color/darker_gray"/>

</RelativeLayout>